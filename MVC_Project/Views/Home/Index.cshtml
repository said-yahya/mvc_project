@model List<MVC_Project.Models.User>
@{
    ViewData["Title"] = "Home Page - All Users";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 text-center mb-4">All Registered Users</h1>
            
            @if (Model != null && Model.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">User List (@Model.Count users)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Last Name</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <th scope="row">@user.Id</th>
                                            <td>@user.Name</td>
                                            <td>@user.Lastname</td>
                                            <td>@user.Email</td>
                                            <!-- <td>
                                                <a href="/Users/Details/@user.Id" class="btn btn-sm btn-outline-primary">View</a>
                                                <a href="/Users/Edit/@user.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                                                <a href="/Users/Delete/@user.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                            </td> -->
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    <h4 class="alert-heading">No Users Found!</h4>
                    <p>There are currently no registered users in the system.</p>
                    <hr>
                    <p class="mb-0">
                        <a href="/Login" class="btn btn-primary">Register New User</a>
                    </p>
                </div>
            }
            
            <div class="text-center mt-4">
                <a href="/Login" class="btn btn-success">Add New User</a>
                <a href="/Users" class="btn btn-info">Manage Users</a>
            </div>
        </div>
    </div>
</div>
