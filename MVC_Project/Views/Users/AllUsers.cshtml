@model List<MVC_Project.Models.User>
@{
    ViewData["Title"] = "All Users";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="display-6 mb-3">All Registered Users</h1>
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">User List (@Model.Count users)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Last Name</th>
                                        <th scope="col">Email</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <th scope="row">@user.Id</th>
                                            <td>@user.Name</td>
                                            <td>@user.Lastname</td>
                                            <td>@user.Email</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    
                </div>
                <div class="mt-3">
                    <a href="/Home" class="btn btn-secondary">Back to Home</a>
                </div>
        </div>
    </div>
</div>