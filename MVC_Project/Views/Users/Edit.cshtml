@model List<MVC_Project.Models.User>
@{
    ViewData["Title"] = "Edit Users";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="display-6 mb-3">Edit Users</h1>
            
            @if (Model != null && Model.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">User List (@Model.Count users)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Last Name</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <th scope="row">@user.Id</th>
                                            <td>@user.Name</td>
                                            <td>@user.Lastname</td>
                                            <td>@user.Email</td>
                                            <td>
                                                <a asp-controller="Users" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    No Users Found! <a href="/Login" class="alert-link">Create one</a>.
                </div>
            }
            
            <div class="mt-3">
                <a href="/Home" class="btn btn-secondary">Back to Home</a>
            </div>
        </div>
    </div>
</div> 